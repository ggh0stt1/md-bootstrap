<div class="row">
    {{#each products}}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card card-ecommerce">

            <!--Card image-->
            <div class="view overlay">
                <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/3.jpg" class="img-fluid"
                    alt="">
                <a>
                    <div class="mask rgba-white-slight waves-effect waves-light"></div>
                </a>
            </div>
            <!--Card image-->

            <!--Card content-->
            <div class="card-body">
                <!--Category & Title-->

                <h5 class="card-title mb-1">
                    <strong>
                        <a href="" class="dark-grey-text">{{this.name}}</a>
                    </strong>
                </h5>
                <span class="badge badge-info mb-2">new</span>
                <!-- Rating -->
                <ul class="rating">

                    {{#each this.reviewClasses}}
                        {{#if ([helpers/ifeq] this "selected")}}
                            <li><i class="fa fa-star"></i></li>
                        {{/if}}

                        {{#if ([helpers/ifeq] this "empty")}}
                            <li><i class="fa fa-star-o"></i></li>
                        {{/if}}

                        {{#if ([helpers/ifeq] this "half")}}
                            <li><i class="fa fa-star-half-o"></i></li>
                        {{/if}}
                    {{/each}}
              
              {{!-- <li><i class="fa fa-star-half-o"></i></li>
              <li><i class="fa fa-star-o"></i></li>
                    <li>
                        <i class="fa fa-star blue-text"></i>
                    </li>
                    <li>
                        <i class="fa fa-star blue-text"></i>
                    </li>
                    <li>
                        <i class="fa fa-star blue-text"></i>
                    </li>
                    <li>
                        <i class="fa fa-star blue-text"></i>
                    </li>
                    <li>
                        <i class="fa fa-star blue-text"></i>
                    </li> --}}
                </ul>

                <!--Card footer-->
                <div class="card-footer pb-0">
                    <div class="row mb-0">
                        <span class="float-left">

                            {{#if this.hasSalesPrice}}
                                <h5 class="mb-0 pb-0 mt-1 font-weight-bold">
                                <span class="red-text">
                                    <strong>{{this.formattedPrice}}</strong>
                                </span>
                                <span class="grey-text">
                                    <small>
                                        <s>{{this.wasFormattedPrice}}</s>
                                    </small>
                                </span>
                            </h5>
                            {{else}}
                                <strong>{{this.formattedPrice}}</strong>
                            {{/if}}
                        </span>
                        <span class="float-right">

                            <a class="" data-toggle="tooltip" data-placement="top" title=""
                                data-original-title="Add to Cart">
                                <i class="fa fa-shopping-cart ml-3"></i>
                            </a>
                        </span>
                    </div>
                </div>

            </div>
            <!--Card content-->

        </div>
    </div>
    {{/each}}
</div>